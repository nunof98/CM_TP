<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/textView_subject_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Corporate Finance"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
    android:id="@+id/layout_subject_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView_subject_name">

    <TextView
        android:id="@+id/textView_subject_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Terça-feira 14:00h - 16:30h \nSexta-feira 09:00h - 11:30h"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/layout_professor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_subject_name">

        <ImageView
            android:id="@+id/imageView_professor_profile_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toBottomOf="@+id/textView_date_entry"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/professor_professor_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_subject_name"
            app:layout_constrainLeft_toRight="@+id/layout_professor_info">

            <TextView
                android:id="@+id/textView_professor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Prof. Artur Rodrigues"
                />

            <TextView
                android:id="@+id/textView_professor_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Email: Artur.Rodriguez@gmail.ecg.uminho.pt"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Horário Atendimento"
                />

            <TextView
                android:id="@+id/textView_horario_atendimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Quarta-feira 17:00h - 19:00h"
                />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>