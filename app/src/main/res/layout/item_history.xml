<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView_subject_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:textSize="25sp"
        android:textColor="?colorSecondary"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_right_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_subject_name">

        <TextView
            android:id="@+id/textView_date_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wed, Dec 1"
            android:textSize="20sp"
            android:textColor="?colorSecondary"
            />

        <TextView
            android:id="@+id/textView_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="?colorSecondary"
            android:text="@string/start"/>

        <TextView
            android:id="@+id/textView_entry_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="?colorSecondary"
            android:text="14:00"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_left_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_subject_name">


    <TextView
        android:id="@+id/textView_date_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wed, Dec 1"
        android:textColor="?colorSecondary"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/textView_ended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="?colorSecondary"
        android:text="@string/end"/>

    <TextView
        android:id="@+id/textView_end_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="?colorSecondary"
        android:text="14:00"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/arrow_pic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_right_arrow"
        app:tint="?colorSecondary"
        app:layout_constraintLeft_toRightOf="@+id/layout_right_side"
        app:layout_constraintRight_toLeftOf="@+id/layout_left_side"
        app:layout_constraintTop_toBottomOf="@+id/textView_subject_name"
        android:layout_marginTop="30dp"/>


    <TextView
        android:id="@+id/textView_resume_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="School of Technology | Room 5 | Attendance on Time"
        android:textSize="15sp"
        android:textColor="?colorSecondary"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_right_side"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
       />

</androidx.constraintlayout.widget.ConstraintLayout>